## vim:ft=zsh

# zsh functions
autoload -U compinit
autoload colors
autoload catch throw
autoload zargs

# own functions
autoload check_com chpwd dirinfo extr git-hook gtd-move \
         off plonkhost put reload rtab salias \
         world-readable xexport xsource youtube-watch

colors

# from https://git.tabularazor.org/~mikael/etc/tree/zsh/functions
for action in Start Stop Restart Reload; {
	eval "function $action {
		typeset action
		for action in \$*; {
			sudo /etc/init.d/\$action ${action:l}
		}
	}"
}
unset action
