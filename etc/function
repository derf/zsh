## vim:ft=zsh
zrc_status functions

# zsh functions
autoload -U compinit
autoload catch throw
autoload zargs

# own functions
autoload $ZDIR/functions/*(*N:t)

function Start Stop Restart Reload {
	typeset script
	function __sudo {
		if ((EUID)) {
			sudo $*
		} else {
			$*
		}
	}
	for script in $*; {
		__sudo /etc/init.d/$script ${0:l}
	}
}
