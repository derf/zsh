## vim:ft=zsh
zrc_status functions

# zsh functions
autoload -U compinit
autoload catch throw
autoload zargs

# own functions
autoload $ZDIR/functions/*(*N:t)

function Start Stop Restart Reload {
	typeset script sudo
	if ((EUID)) {
		sudo=sudo
	}
	for script in $*; {
		$sudo /etc/init.d/$script ${0:l}
	}
}
