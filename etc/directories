## Named directories
## vim:ft=zsh
case `hostname` in
	aneurysm)
		hash -d www=/var/www
		hash -d web=$HOME/public_html
		hash -d vcs=$HOME/var/svn
		hash -d lyrics=$HOME/packages/lyrics
	;;
	saviour)
		hash -d music=$HOME/lib/audio
		hash -d www=/var/www
		hash -d cgi=/usr/lib/cgi-bin
		hash -d lyrics=$HOME/packages/lyrics
		hash -d vcs=$HOME/var/svn
	;;
	nemesis)
		hash -d vcs=$HOME/var/svn
		hash -d lyrics=$HOME/packages/lyrics
esac

xexport vcs=~vcs
xexport lyrics=~lyrics
