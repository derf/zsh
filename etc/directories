## Named directories
## vim:ft=zsh
case `hostname` in
	aneurysm)
		www=/var/www
		web=$HOME/public_html
		export vcs=$HOME/var/svn
		export lyrics=$HOME/packages/lyrics
	kraftwerk)
		music=/data/share/music
		www=/data/www
		web=$HOME/public_html
		export lyrics=/data/wildernet/lyrics
		export vcs=/data/derf/svn
	;;
	saviour)
		music=$HOME/lib/audio
		www=/var/www
		cgi=/usr/lib/cgi-bin
		export lyrics=$HOME/packages/lyrics
		export vcs=$HOME/var/svn
	;;
	nemesis)
		export vcs=$HOME/var/svn
		export lyrics=$HOME/packages/lyrics
esac
svn=$vcs
