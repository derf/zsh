## vim:ft=zsh
## finfo - show function info
## Assume that a function begins with an introduction, and print it
## Usage: finfo <function name>
typeset line

whichf $1 &> /dev/null || return 1

while read line; do
	[[ $line == \#* ]] || break
	[[ $line == *vim:ft=* ]] && continue
	[[ $line == \#(autoload|compdef)* ]] && continue
	echo ${line#(\#|)\# }
done < $(whichf $1)
