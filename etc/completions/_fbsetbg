#compdef fbsetbg
## fluxbox fbsetbg completion
## Daniel Friesel <derf@derf.homelinux.org>
## https://derf.homelinux.org/~derf/dotfiles/zsh/completions/_fbsetbg

local arguments

# not yet optimal
arguments=(
	-{u,U}':wallpapersetter: '
	-{b,B}':fbsetrootoptions: '
	- '(exclusive)'
	'-h'
	'-i'
	'-l'
	'-p'
	-{f,F}':file:_files'
	-{c,C}':file:_files'
	-{t,T}':file:_files'
	-{a,A}':file:_files'
	-{r,R}':directory:_path_files -/'
)

_arguments -s $arguments
